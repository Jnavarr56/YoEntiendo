      <%= hidden_field(:passage, :user_id, :value => @passage.user_id) %>
    <% end %>
    
  </div>

  <div class="field">
    <%= hidden_field(:passage, :annotation_code, :value => '') %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
