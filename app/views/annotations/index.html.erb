<h1>Your Annotations</h1>

<table>
  <thead>
    <tr>
      <th>Passage</th>
      <th>Original Text</th>
      <th>Annotated English</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @annotations.each do |annotation| %>
      <% if @annotation_authors[annotation.id].id == @current_user.id %>
        <% row_class = "annotationByMe" %>
        <% creator = {:email => "You"} %>
      <% else %>
        <% row_class = "annotationByCollaborator" %>
        <% creator = @annotation_authors[annotation.id] %>
      <% end %>
      <tr class = <%= row_class %> data-annotation-view = <%= "/annotations/#{annotation.id}"%>>
        <td><%= @related_passages[annotation.id].title %></td>
        <td><%= annotation.original_spanish %></td>
        <td><%= annotation.annotation_content %></td>
        <td><%= creator[:email] %></td>
        <td><%= link_to 'Open', annotation %></td>
      </tr>
    <% end %>
  </tbody>
</table>

