<div class = "login">
  <h2 id = "logoText">YoEntiendo</h2>

  <div class = "loginAlert">
    <% if notice %>
      <p class="alert"><em><%= notice %></em></p>
    <% end %>
    <% if alert %>
      <p class="alert"><em><%= alert %></em></p>
    <% end %>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "password" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "remember me" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>


  <% end %>
  <div class = "loginLinks">
    
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  
    <br>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive account confirmation instructions?", new_confirmation_path(resource_name) %><br />
    <% end -%>
  </div>


  <div class = "translateAnimate">
    <h1 id = "englishLogin">Bienvenido</h1><h1 id = "spanishLogin">Welcome</h1>
    <h2 id = "tagline">A simple tool for annotating Spanish language text.</h2>
    <br><br>
    <div>
      <h3>&#8226; Get on the spot English translations. <br></h3>
      <h3>&#8226; Share interactive passages with other users. <br></h3>
      <h3>&#8226; Download passages in TXT or Word format. <br></h3>
      </div>  
    </h2>
  </div>

</div>
